@page
@model Identity.Pages.Auth.ResetPasswordModel
@{
}

<script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>

<div class="flex h-[700px] w-full">
    @* <div class="w-full hidden md:inline-block">
        <img class="h-full" src="https://raw.githubusercontent.com/prebuiltui/prebuiltui/main/assets/login/leftSideImage.png" alt="leftSideImage">
    </div> *@

    <div class="w-full flex flex-col items-center justify-center">
        @if (Model.IsInvalidCredential)
        {
            <div role="alert" class="rounded border-s-4 border-red-500 bg-red-50 p-4">
                <strong class="block font-medium text-red-800"> Authentication Failed! </strong>

                <p class="mt-2 text-sm text-red-700">
                    Username or password is invalid!
                </p>
            </div>
        }
        <form method="POST" class="md:w-96 w-80 flex flex-col items-center justify-center">
            @Html.AntiForgeryToken()
            <h2 class="text-4xl text-gray-900 font-medium">Reset Password</h2>
            <p class="text-sm text-gray-500/90 mt-3 text-center">Enter your registered email address. We will send you a link to reset your password.</p>

            <div class="flex mt-8 items-center w-full bg-transparent border border-gray-300/60 h-12 rounded-full overflow-hidden pl-6 gap-2">
                <svg width="16" height="11" viewBox="0 0 16 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M0 .55.571 0H15.43l.57.55v9.9l-.571.55H.57L0 10.45zm1.143 1.138V9.9h13.714V1.69l-6.503 4.8h-.697zM13.749 1.1H2.25L8 5.356z" fill="#6B7280" />
                </svg>
                <input type="email" id="username" name="username" placeholder="Email id" class="bg-transparent text-gray-500/80 placeholder-gray-500/80 outline-none text-sm w-full h-full" required>
            </div>

            <button type="submit" class="mt-8 cursor-pointer w-full h-11 rounded-full text-white bg-indigo-500 hover:opacity-90 transition-opacity">
                Reset Password
            </button>
            <p class="text-gray-500/90 text-sm mt-4">Don’t have an account? <a class="text-indigo-400 hover:underline" href="/auth/signup">Sign up</a></p>

            <div class="flex items-center gap-4 w-full my-5">
                <div class="w-full h-px bg-gray-300/90"></div>
                <p class="w-full text-nowrap text-sm text-gray-500/90 text-center">or</p>
                <div class="w-full h-px bg-gray-300/90"></div>
            </div>

            <a href="/auth/signin" class="w-full cursor-pointer shadow flex items-center justify-center h-12 rounded-full">
                Back To Login Page
            </a>


        </form>
    </div>
</div>